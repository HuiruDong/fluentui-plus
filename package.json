{
  "name": "fluentui-plus",
  "version": "0.1.0",
  "type": "module",
  "description": "A component library based on Fluent UI, targeting Chinese enterprise applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./es/*": "./dist/es/*",
    "./lib/*": "./dist/lib/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib",
    "build:lib": "vite build",
    "build:lib:dev": "cross-env NODE_ENV=development vite build",
    "build:lib:prod": "cross-env NODE_ENV=production vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:es": "cross-env BUILD_FORMAT=es vite build",
    "build:cjs": "cross-env BUILD_FORMAT=cjs vite build",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "type-check": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run lint:check && npm run test && npm run build"
  },
  "keywords": [
    "react",
    "typescript",
    "fluent-ui",
    "component-library",
    "ui-components",
    "enterprise"
  ],
  "author": "Huiru Dong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HuiruDong/fluentui-plus.git"
  },
  "bugs": {
    "url": "https://github.com/HuiruDong/fluentui-plus/issues"
  },
  "homepage": "https://github.com/HuiruDong/fluentui-plus#readme",
  "peerDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@fluentui/react-components": "^9.54.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.17.19",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.2.0",
    "vitepress": "^1.5.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "clsx": "^2.0.0",
    "lodash": "^4.17.21"
  }
}
